# keybinds
alt - 0x24 : open -na "Alacritty"
# alt - 1 : open -a "Alacritty"
# alt - 2 : osascript ~/open_new_tab.scpt "localhost"
# alt - b : open -na "Google Chrome"
# alt - 3 : osascript ~/open_chrome.scpt "localhost" "notion.so"
# alt - 4 : open -a "Discord"
# alt - 5 : open -a "Microsoft Teams classic"
# alt - 8 : open -a "Obsidian"
alt - q : osascript -e 'tell application "System Events" to key code 12 using {command down}'
# alt + shift - 0x2F : osascript -e 'tell application "System Events" to keystroke "q" using {control down, command down}'

# yabai if I ever decide to use it
# -- Changing Window Focus --

# # change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east
#
# It's moving the whole space, from one display to another (good with 2 monitors)
alt - m: yabai -m space --display recent

# -- Modifying the Layout --
# rotate layout clockwise
# alt - e : yabai -m space --rotate 270
alt - e : yabai -m window --toggle split

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis
# J, K, L, and H windows movement
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east
shift + alt - h : yabai -m window --swap west

# toggle window float
shift + alt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
alt - f : yabai -m window --toggle zoom-fullscreen
#
# # balance out tree of windows (resize to occupy same area)
# Translates: alt - =
alt - 0x18 : yabai -m space --balance

# close window
cmd - q : yabai -m window --close

# desktop management
# TODO: before running the focus, check if space exists if not create one
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9
alt - 0 : yabai -m space --focus 10
# windows in desktop management
shift + alt - 1 : yabai -m window --space  1;
shift + alt - 2 : yabai -m window --space  2;
shift + alt - 3 : yabai -m window --space  3;
shift + alt - 4 : yabai -m window --space  4;
shift + alt - 5 : yabai -m window --space  5;
shift + alt - 6 : yabai -m window --space  6;
shift + alt - 7 : yabai -m window --space  7;
shift + alt - 8 : yabai -m window --space  8;
shift + alt - 9 : yabai -m window --space  9;
shift + alt - 0 : yabai -m window --space 10;

# resize
# translates to alt + >
alt - 0x2F : yabai -m window --resize left:80:0; yabai -m window --resize right:80:0; yabai -m window --resize bottom:0:40; yabai -m window --resize top:0:40;
# translates to alt + <
alt - 0x2B  : yabai -m window --resize left:-80:0; yabai -m window --resize right:-80:0; yabai -m window --resize bottom:0:-40; yabai -m window --resize top:0:-40;

# close window
alt - q : yabai -m window --close

