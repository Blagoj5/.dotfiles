# keybinds
alt - 0x24 : open -na "Alacritty"
alt - 1 : open -a "Alacritty"
alt - 2 : osascript ~/open_new_tab.scpt "http://localhost"
alt - b : open -na "Google Chrome"
alt - 3 : osascript ~/open_chrome.scpt "http://localhost" "https://www.notion.so/Scrum-e0c76522bc434b08b7acdd0fd5260719"
alt - 4 : open -a "Discord"
alt - 5 : open -a "Microsoft Teams classic"
alt - 8 : osascript ~/open_new_tab.scpt "https://www.notion.so/Scrum-e0c76522bc434b08b7acdd0fd5260719"
alt - q : osascript -e 'tell application "System Events" to key code 12 using {command down}'

# ralt - d will scroll down in vim, only left cmd used for omni search
# lcmd - d : osascript -e 'tell application "System Events" to key code 49 using {command down}'

